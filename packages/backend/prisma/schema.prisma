generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  menu      Menu[]
  createdAt DateTime @default(now())
}

model Menu {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  imageUrl    String
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())

  @@index([categoryId])
}
